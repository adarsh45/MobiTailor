<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rv_order_ref_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ref. No: 0000"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/btn_edit_order"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:src="@drawable/ic_new_order"
                android:layout_gravity="center" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Order Date"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delivery Date"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_rv_order_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_rv_order_del_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_rv_order_total_bill"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total Bill: 000"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_rv_order_pending_bill"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pending: 00"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:padding="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>